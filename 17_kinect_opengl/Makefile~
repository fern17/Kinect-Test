CC = g++
LD = g++
LDFLAGS =
CFLAGS=-g -Wall `pkg-config --cflags /usr/local/include/libfreenect` -lopengl32 -lglut32
LIBS = `pkg-config --libs /usr/local/include/libfreenect` -lGL -lGLU -lglut 
OBJECTS = main.o
PROG = mycppview

all:$(PROG)

$(PROG): $(OBJECTS)
	$(LD) $(LDFLAGS) $(LIBS) $(OBJECTS) -o $(PROG)

%.o: %.cpp
	$(CC) $(CFLAGS)  $(LIBS) -c $<

clean:
	rm -rf *.o $(PROG)

